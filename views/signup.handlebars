
<div class="card signup-container">

  <div class="card-header signup-title">
    <h3>Sign Up Form</h3>
  </div>
  
  <div>
    <form id="signup-form" class="card-body">

      <div class="form-row">
        <label for="username-signup" class="form-label">Username</label>
        <input id="username-signup" type="text" class="form-input">
      </div>

      <div class="form-row">
        <label for="email-signup" class="form-label">Email</label>
        <input id="email-signup" type="email" class="form-input">
      </div>

      <div class="form-row">
        <label for="password-signup" class="form-label">Password</label>
        <input id="password-signup" type="password" class="form-input">
      </div>

      <div class="form-row">
        <button type="submit" id="signup-btn" class="btn">Sign Up!</button>
        <a href="/login" class="btn login-link">Login</a>
      </div>
      
    </form>
  </div>
</div>

<script src="/js/signup.js"></script>